{% extends "base.html.twig" %}

{% block body %}
    {% if product.id %}
        <h2 class="mt-3">Modifier le produit</h2>
        {{ form_start(form, {'action': path('edit_product', {id: product.id}), 'method': 'POST'}) }}
    {% else %}
        <h2 class="mt-3">Ajouter le produit</h2>
        {{ form_start(form, {'action': path('create_product'), 'method': 'POST'}) }}
    {% endif %}

    {{ form_row(form.name, {'label': 'Nom :'}) }}

    {{ form_row(form.price, {'label': 'Prix :'}) }}

    {{ form_row(form.image, {'label': 'Image :'}) }}

    {{ form_row(form.category, {'label': 'Catégorie'}) }}

    {{ form_row(form.quantity, {'label': 'Quantité :'}) }}

    {{ form_row(form.description, {'label': 'Description :', 'attr': {'rows': 3}}) }}

    {{ form_row(form.save, {'label': 'Enregistrer'}) }}

    {{ form_end(form) }}
{% endblock %}