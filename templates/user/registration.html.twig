{% block stylesheets %}
    <link rel="stylesheet" href="https://bootswatch.com/4/slate/bootstrap.min.css"/>
    <link rel="stylesheet" href="css/style.css">
{% endblock %}

<div class="d-lg-flex align-items-center h-100">
{% block body %}
    <div class="container col-lg-6 text-center">
        <a href="{{ path('home') }}"><img class="img-fluid mb-4" width="500" src="images/brasserie_medium.png"/></a>
        <h3>En vous créant un compte, vous aurez la possibilité de commander des produits et de partager votre avis à leur propos.</h3>
    </div>
    <div class="container col-lg-4">
        {{ form_start(form, {'action': path('account_confirm'), 'method': 'POST'}) }}

        {{ form_row(form.lastname, {'label': 'Nom', 'attr': {'placeholder': 'Nom'}}) }}

        {{ form_row(form.firstname, {'label': 'Prénom', 'attr': {'placeholder': 'Prénom'}}) }}

        {{ form_row(form.email, {'label': 'Adresse email', 'attr': {'placeholder': 'Adresse email'}}) }}

        {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe'}}) }}

        {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe', 'attr': {'placeholder': 'Confirmer le mot de passe'}}) }}
        
        {{ form_row(form.submit, {'label': 'Créer un compte', 'attr': {'class': 'button'}}) }}

        {{ form_end(form) }}
    </div>
{% endblock %}
</div>