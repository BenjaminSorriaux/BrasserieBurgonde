{% extends "base.html.twig" %}

{% block body %}
    <a class="btn btn-primary mt-3" href="{{ path('create_admin') }}"><i class="fas fa-plus mr-2"></i>Ajouter un administrateur</a>
    <div class="row text-center mt-3">
        <div class="col-4 font-weight-bold">Nom</div>
        <div class="col-4 font-weight-bold">Prénom</div>
        <div class="col-4 font-weight-bold">Adresse email</div>
    </div>
    {% if admins %}
        {% for admin in admins %}
            <div class="row border rounded mt-2 text-center pt-3 pb-3">
                <div class="col-4">{{ admin.firstname }}</div>
                <div class="col-4">{{ admin.lastname }}</div>
                <div class="col-4">{{ admin.email }}</div>
            </div>
        {% endfor %}
    {% else %}
        <h3 class="text-muted">Aucun administrateur trouvé.</h3>
    {% endif %}
{% endblock %}