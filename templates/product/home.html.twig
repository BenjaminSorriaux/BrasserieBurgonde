{% extends "base.html.twig" %}

{% block body %}
    <div class="row">
        <div class="col-lg-8">
            <h2 class="mt-3 mb-2">Nos produits</h2>
            <div class="row scrolling-wrapper d-flex hidden">
                {% for product in products %}
                    <div class="card col-lg-3 border rounded">
                        <img class="mt-2 img-fluid" src="{{ product.image }}" />
                        <p><a href="{{ path('product_details', {id: product.id}) }}">{{ product.name }}</a><br>{{ product.price }}€</p>
                    </div>
                {% endfor %}
            </div>
            <div class="row visible">
                {% for product in mobile_products %}
                    <div class="card mt-2 col-lg-3 border rounded">
                        <img class="mt-2 img-fluid" src="{{ product.image }}" />
                        <p><a href="{{ path('product_details', {id: product.id}) }}">{{ product.name }}</a><br>{{ product.price }}€</p>
                    </div>
                {% endfor %}
                <a class="mt-2 btn btn-primary float-right" href="{{ path('products') }}">Plus de produits</a>
            </div>
        </div>
        <div class="col-lg-4">
            <h2 class="mb-2 mt-3">Catégories</h2>
            <div class="list-group">
                {% for category in categories %}
                    <a href="{{ path('category_products', {id: category.id}) }}" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action">
                        <span>{{ category.title }}</span>
                        <span class="badge badge-primary badge-pill">{{ category.products.count }}</span>
                    </a>
                {% endfor %}
            </div>
        </div>
        <div class="col-sm-12">
        <h2 class="mt-3 mb-2">Actualités</h2>
            {% for article in news %}
                <div class="row border rounded mb-2">
                    <div class="col-lg-3 mt-2">
                        <img class="mb-2 img-fluid" src="{{ article.picture }}" />
                    </div>
                    <div class="col-lg-9 mt-2">
                        <h4 class="text-primary">{{ article.title }} <span class="text-muted"> - {{ article.createdAt | date('d/m/Y') }}</span></h4>
                        <p class="text-justify">{{ article.content }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}