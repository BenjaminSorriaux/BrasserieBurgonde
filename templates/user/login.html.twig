{% block stylesheets %}
    <link rel="stylesheet" href="https://bootswatch.com/4/slate/bootstrap.min.css"/>
    <link rel="stylesheet" href="css/style.css">
{% endblock %}


<div class="d-flex container align-items-center text-center h-100">
    {% block body %}
        <div class="m-auto form-group col-lg-5">
            <a href="{{ path('home') }}"><img class="img-fluid mb-4" src="images/brasserie_medium.png"></a>

            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <input type="text" name="_username" placeholder="Adresse email" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="password" name="_password" placeholder="Mot de passe" class="form-control" required>
                    <a class="float-left" href="{{ path('forgotten_password') }}">Mot de passe oublié</a>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-block button">Connexion</button>
                </div>
            </form>
            <p>Vous n'avez pas de compte ? <a href="{{ path('registration') }}">En créer un</a></p>
        </div>
    {% endblock %}
</div>