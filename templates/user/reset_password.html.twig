{% block stylesheets %}
    <link rel="stylesheet" href="https://bootswatch.com/4/slate/bootstrap.min.css"/>
    <link rel="stylesheet" href="../css/style.css">
{% endblock %}

<div class="d-flex container align-items-center text-center h-100">
    {% block body %}
        <div class="m-auto form-group col-lg-5">
            <a href="{{ path('home') }}"><img class="img-fluid mb-4" src="../images/brasserie_medium.png"></a>
            <p>Saisissez votre nouveau mot de passe</p>

            {{ form_start(form) }}

            {{ form_row(form.password, {'label': 'Mot de passe'}) }}

            {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe'}) }}

            {{ form_row(form.submit, {'label': 'Confirmer', 'attr': {'class': 'btn btn-lg btn-block button'}}) }}

            {{ form_end(form) }}
            
        </div>
    {% endblock %}
</div>