{% extends 'base.html.twig' %}

{% block body %}
    <h2 class="mt-3 mb-3">Actualit√©s</h2>
        <div class="row">
            <div class="col">
                {% for article in news %}
                    <div class="row border rounded mb-2">
                    <div class="col-lg-3 mt-2">
                        <img class="mb-2 img-fluid" src="{{ article.picture }}" />
                    </div>
                    <div class="col-lg-9 mt-2">
                        <h4 class="text-primary">{{ article.title }} <span class="text-muted"> - {{ article.createdAt | date('d/m/y') }}</span></h4>
                        <p class="text-justify">{{ article.content }}</p>
                    </div>
                </div>
                {% endfor %}
	            {{ knp_pagination_render(news) }}
            </div>
        </div>
{% endblock %}
