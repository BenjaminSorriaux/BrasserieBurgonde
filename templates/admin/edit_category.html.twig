{% extends "base.html.twig" %}

{% block body %}
    {% if category.id %}
        <h2 class="mt-3">Modifier la catégorie</h2>
        {{ form_start(form, {'action': path('edit_category', {id: category.id}), 'method': 'POST'}) }}
    {% else %}
        <h2 class="mt-3">Ajouter une actualité</h2>
        {{ form_start(form, {'action': path('create_category'), 'method': 'POST'}) }}
    {% endif %}

    {{ form_row(form.title, {'label': 'Titre :'}) }}

    {{ form_row(form.save, {'label': 'Enregistrer'}) }}

    {{ form_end(form) }}
{% endblock %}