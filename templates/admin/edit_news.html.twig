{% extends "base.html.twig" %}

{% block body %}
    {% if news.id %}
        <h2 class="mt-3">Modifier l'actualité</h2>
        {{ form_start(form, {'action': path('edit_news', {id: news.id}), 'method': 'POST'}) }}
    {% else %}
        <h2 class="mt-3">Ajouter une actualité</h2>
        {{ form_start(form, {'action': path('create_news'), 'method': 'POST'}) }}
    {% endif %}

    {{ form_row(form.title, {'label': 'Titre :'}) }}

    {{ form_row(form.picture, {'label': 'Image :'}) }}

    {{ form_row(form.content, {'label': 'Contenu :', 'attr': {'rows': 3}}) }}

    {{ form_row(form.save, {'label': 'Enregistrer'}) }}

    {{ form_end(form) }}
{% endblock %}