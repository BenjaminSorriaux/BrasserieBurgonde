{% extends "base.html.twig" %}

{% block body %}
    <div class="m-auto form-group col-lg-9">
        <h2 class="mt-3 mb-3 text-center">Nouvel administrateur</h2>
        {{ form_start(form) }}

        <div class="row">
            <div class="col-6">
                {{ form_row(form.lastname, {'label': 'Nom'}) }}
            </div>
            <div class="col-6">
                {{ form_row(form.firstname, {'label': 'Prénom'}) }}
            </div>
        </div>

        {{ form_row(form.email, {'label': 'Adresse email'}) }}

        {{ form_row(form.password, {'label': 'Mot de passe'}) }}

        {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe'}) }}

        <div class="text-center">
            {{ form_row(form.submit, {'label': 'Créer un compte'}) }}
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}